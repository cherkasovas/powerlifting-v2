<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:editTextStyle">@style/EditTextMain</item>
        <item name="android:textColorHighlight">#99ff5722</item>
        <item name="android:spinnerStyle">@style/SpinnerMain</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemMain</item>
        <item name="android:checkboxStyle">@style/CheckBoxmain</item>
    </style>

    <style name="Main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/table_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/table_border_width</item>
        <item name="android:layout_marginBottom">@dimen/table_border_width</item>
    </style>

    <style name="Norms">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">@dimen/table_row_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/table_border_width</item>
        <item name="android:layout_marginBottom">@dimen/table_border_width</item>
    </style>

    <style name="RatioGroupButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/table_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainLastItem" parent="Main">
        <item name="android:layout_marginBottom">-0.5dp</item>
    </style>

    <style name="Main1col" parent="Main">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange_status_bar</item>
        <item name="background">@color/orange_status_bar</item>
    </style>


    <style name="EditTextMain" parent="android:Widget.EditText">
        <item name="android:background">@drawable/main_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxmain" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/main_btn_check_holo_light</item>
    </style>

    <style name="SpinnerMain" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/main_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/main_list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemMain" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/main_btn_radio_holo_light</item>
    </style>

    <style name="settings_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
