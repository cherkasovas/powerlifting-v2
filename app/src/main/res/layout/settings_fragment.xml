<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/your_weight_settings"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/your_weight" />

            <com.powerlifting.calc.views.CustomFontEditText
                android:id="@+id/your_weight"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/priority_federation_settings"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/priority_federation" />

            <Spinner
                android:id="@+id/priority_federation"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/custom_font_settings"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/custom_font" />

            <Spinner
                android:id="@+id/custom_font"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/is_extended_settings"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/extended_percent" />

            <CheckBox
                android:id="@+id/is_extended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/gender_settings"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/gender" />

            <ToggleButton
                android:id="@+id/gender"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/gender_selector"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.powerlifting.calc.views.CustomFontTextView
                style="@style/settings_text_view"
                android:gravity="center_vertical"
                android:text="@string/reset" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

    </LinearLayout>

</ScrollView>